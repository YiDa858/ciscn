<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.FidoUserMapper">
    <resultMap id="userResultMap" type="pojo.FidoUser">

    </resultMap>

    <select id="getUserByID" resultType="pojo.FidoUser">
        select * from rpuser where userid = #{userid};
    </select>
    <insert id="insertNewUser" useGeneratedKeys="true" keyProperty="userid">
        insert into rpuser(username, userPubKey)
        VALUES (#{userName},#{userPubKey})
    </insert>
</mapper>