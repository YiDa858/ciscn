<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.FidoUserMapper">
    <resultMap id="fidoUserResultMap" type="pojo.FidoUser">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
    </resultMap>

    <select id="getUserByID" resultMap="fidoUserResultMap">
        SELECT *
        FROM fidouser
        WHERE id = #{id};
    </select>

    <select id="getUserByName" resultMap="fidoUserResultMap">
        SELECT *
        FROM fidouser
        WHERE username = #{username};
    </select>

    <insert id="insertNewUser" useGeneratedKeys="true" keyProperty="id">
        INSERT
        INTO fidouser(username)
        VALUES (#{username});
    </insert>
</mapper>