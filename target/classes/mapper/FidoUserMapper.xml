<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.FidoUserMapper">
    <resultMap id="userResultMap" type="pojo.FidoUser">
    </resultMap>

    <select id="getUserByID" resultType="pojo.FidoUser">
        SELECT * FROM fidouser WHERE id = #{id};
    </select>

    <select id="getUserByName" resultType="pojo.FidoUser">
        SELECT * FROM fidouser WHERE username = #{username};
    </select>

    <insert id="insertNewUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO fidouser(username) VALUES (#{username});
    </insert>
</mapper>